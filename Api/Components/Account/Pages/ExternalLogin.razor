@page "/Account/ExternalLogin"

<PageTitle>Register</PageTitle>

<EditForm Model="@Model"
          OnValidSubmit="OnValidSubmitAsync" 
          FormName="confirmation" 
          method="post">
    <DataAnnotationsValidator />
    <MudCard Class="ma-4">
        <MudCardHeader>
            <StatusMessage Message="@message" />
            <MudText Typo="Typo.h3">Associate your @ProviderDisplayName account.</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudAlert Severity="Severity.Info">
                You've successfully authenticated with <strong>@ProviderDisplayName</strong>.
                Please enter an email address for this site below and click the Register button to finish logging in.
            </MudAlert>

            @* TODO *@
            @* <MudTextField T="string" 
                          @bind-Value="@Model.Email"
                          For="@(() => Model.Email)"
                          Label="Email"
                          Placeholder="Please enter your email."
                          class="form-control"
                          autocomplete="email"/> *@

            <InputText @bind-Value="@Model.Email"
                       class="form-control"
                       autocomplete="email"
                       placeholder="Please enter your email." />

            <ValidationMessage For="() => Model.Email"/>

            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       EndIcon="@Icons.Material.Filled.Check">
                Register
            </MudButton>
        </MudCardContent>
    </MudCard>
</EditForm>