@using WebApp.Components
@using WebApp.Extensions

<MudButton Class="@Class"
           OnClick="Update"
           aria-label="edit">

    <MudCard Style="@Style">
    
        <MudCardMedia Image="@_augmentIconUrl"
                      Height="100"
                      Class="border-solid border-4 pa-2"
                      Style="@Model.GetBorderColor()" />
    
        <MudCardContent Class="d-flex flex-column align-items-stretch">
            <LabelledText Label="Target"
                          Text="@(Model.Augment?.ToString() ?? "None")"
                          TextAlign="Align.Right"/>
            <LabelledText Label="Combo"
                          Text="@(Model.Combo?.ToString() ?? "None")"
                          TextAlign="Align.Right" />
            <LabelledText Label="Reason"
                          Text="@Model.Reason"
                          TextAlign="Align.Right"/>
        </MudCardContent>
        
        <MudCardActions Class="d-flex justify-end mt-n6 mb-n2">
            <MudIconButton OnClick="Remove" 
                       Icon="@Icons.Material.Filled.Delete"
                       Color="Color.Error"
                       Size="Size.Small"
                       aria-label="delete" />
        </MudCardActions>
    
    </MudCard>
</MudButton>