@using SharedKernel.Contracts.v1.Champions
<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6" 
                 Align="Align.Center"
                 GutterBottom="true">
            Create Champion
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudCard Outlined>
            <MudTextField @bind-Value="Name" 
                          Label="Champion Name" 
                          Variant="Variant.Filled" />
            <MudTextField @bind-Value="Role" 
                          Label="Champion Role" 
                          Variant="Variant.Filled" />
        </MudCard>
    </DialogContent>

    <DialogActions>
        <MudButtonGroup Color="Color.Primary"
                        Variant="Variant.Text">
            <MudButton OnClick="(e) => CreateChampion()">
                Save
            </MudButton> 
            <MudButton OnClick="() => MudDialog.Close()">
                Cancel
            </MudButton>
        </MudButtonGroup>
    </DialogActions>

</MudDialog>