@typeparam TModel where TModel : AugmentModelBase

<MudDialog>
    <TitleContent>
        <MudCard>
            <MudCardContent>
                <MudText Typo="Typo.h5" Align="Align.Center"
                         GutterBottom="true">
                    @Title
                </MudText>
            </MudCardContent>
        </MudCard>
    </TitleContent>
    <DialogContent>
        <MudCard>
            <MudCardMedia Image="@IconUrl" 
                          Height="200"/>
            <MudCardContent>
                <MudPaper Class="border-dashed border-4 mud-border-primary pa-2"
                          Style="@AugmentBorderStyle">
                    <MudTextField @bind-Value="Model.AugmentName"
                                  Label="Augment Name"
                                  Variant="Variant.Text"
                                  Margin="Margin.Dense"
                                  FullWidth="true" />
                    <MudTextField @bind-Value="Model.AugmentTarget"
                                  Label="Augment Target"
                                  Variant="Variant.Text"
                                  Margin="Margin.Dense"
                                  FullWidth="true" />

                    <MudColorPicker @bind-Text="Model.AugmentColor"
                                    Label="Augment Color"
                                    ShowToolbar="true"
                                    Variant="Variant.Text"
                                    ColorPickerView="ColorPickerView.Palette"
                                    Palette="AugmentColorPalette"
                                    ShowAlpha="false" />
                </MudPaper>
            </MudCardContent>
        </MudCard>
    </DialogContent>
    <DialogActions>
        <MudButtonGroup Color="Color.Primary" 
                        Variant="Variant.Text">
            <MudButton OnClick="() => UploadIcon()"
                       Color="Color.Primary"
                       Variant="Variant.Filled">
                Upload Icon
            </MudButton>
            <MudButton OnClick="() => Save()"
                       Color="Color.Secondary"
                       Variant="Variant.Filled">
                @SaveButtonLabel
            </MudButton>
            <MudButton OnClick="() => MudDialog.Cancel()"
                       Color="Color.Default">
                Cancel
            </MudButton>
        </MudButtonGroup>
    </DialogActions>
</MudDialog>
